@echo offsetlocalREM One-click publish for the git repo in the .\wiki folder next to this script.REM If there is no .\wiki\.git, falls back to the script folder itself.REM Usage:REM   publish_wiki.batREM   publish_wiki.bat "your commit message"set SCRIPT_DIR=%~dp0set REPO_PATH=%SCRIPT_DIR%wikiif not exist "%REPO_PATH%\.git" set REPO_PATH=%SCRIPT_DIR%.powershell -NoProfile -ExecutionPolicy Bypass -File "%SCRIPT_DIR%publish_wiki.ps1" -RepoPath "%REPO_PATH%" -Message"%~1" -Branch mainset EXITCODE=%ERRORLEVEL%if not %EXITCODE%==0 (  echo.  echo Publish failed with exit code %EXITCODE%.  pause)exit /b %EXITCODE%